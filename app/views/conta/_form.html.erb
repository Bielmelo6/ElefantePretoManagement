<%= form_with(model: contum) do |form| %>
  <% if contum.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(contum.errors.count, "error") %> prohibited this contum from being saved:</h2>

      <ul>
        <% contum.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :item_id%>
    <%= form.collection_select(:item_id, Item.all, :id, :produto,{:selected => @contum.item_id})%>
  </div>

  <div class="field">
    <%= form.label :cliente_id%>
    <%= form.collection_select(:cliente_id, Cliente.all, :id, :nome,{:selected => @contum.cliente_id})%>
  </div>

  <div>
    <%= form.label :total, style: "display: block" %>
    <%= form.number_field :total %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
